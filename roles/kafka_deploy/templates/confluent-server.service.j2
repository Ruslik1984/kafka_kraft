[Unit]
Requires=network.target
After=network.target

[Service]
Type=simple
User={{ kafka_user }}
Group={{ kafka_group }}
ExecStart={{ kafka_root_dir }}/bin/kafka-server-start.sh {{kafka_root_dir}}/config/kraft/server.properties
ExecStop={{ kafka_root_dir }}/bin/kafka-server-stop.sh
Restart=on-failure
Environment=JAVA_HOME=/opt/java
[Install]
WantedBy=multi-user.targets